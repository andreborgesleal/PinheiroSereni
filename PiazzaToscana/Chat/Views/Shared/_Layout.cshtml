    function SombraIn(obj) {
        obj.style["background-color"] = "#f2ebeb";
    }

    function SombraOut(obj) {
        obj.style["background-color"] = "#fff";
    }

    function Display(obj) {
        document.getElementById(obj).style["visibility"] = "visible";

        if (obj == 'menu1') {
            document.getElementById('divCad').style["background-color"] = "#d02929";
            document.getElementById(obj).style["height"] = "153px";
            Esconde('menu2');
        }
        else {
            document.getElementById('divRep').style["background-color"] = "#d02929";
            document.getElementById(obj).style["height"] = "146px";
            Esconde('menu1');
        }
    }
    function Esconde(obj) {
        document.getElementById(obj).style["visibility"] = "hidden";
        document.getElementById(obj).style["height"] = "0px";
        if (obj == 'menu1')
            document.getElementById('divCad').style["background-color"] = "#ff0000";
        else
            document.getElementById('divRep').style["background-color"] = "#ff0000";
    }
