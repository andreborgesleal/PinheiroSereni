@model System.Web.Mvc.PagedList<PinheiroSereni.Negocio.Repositories.ControlPanel.ParamRepository>
@{
    ViewBag.Title = "Painel de Controle";
}
@{
    Layout= null;
}           

<div class="div-header-list">
    Cadastro de Parâmetros do HotSite
</div>
@using (Ajax.BeginForm(new AjaxOptions{ HttpMethod="Post" }))
{
<div class="div-table-list">
    <table  id="table-sort" class="tablesorter" style="width: 100%">
        <thead>
            <tr>
                <th style="width: 10px"></th>
                <th style="width: 50px; text-align: center">
                    CÓDIGO
                </th>
                <th style="width: 200px">
                    NOME DO PARÂMETRO
                </th>
                <th style="width: 200px">
                    VALOR
                </th>
            </tr>
        </thead>
    @foreach (var item in Model)
    {
        <tbody>
        <tr id="linha" style="cursor: pointer;" onmouseover="javascript:TarjaIn(this);" onmouseout="javascript:TarjaOut(this);">
            <td style="width: 10px">            
                @Ajax.ActionLink(" ", "Edit", "Parametros", new { id = item.parametro.parametroID }, new AjaxOptions { HttpMethod = "Post" }, new { @class = "link-editar", @title="Editar" })
            </td>
            <td style="text-align: center">
                @item.parametro.parametroID
            </td>
            <td>
                @item.parametro.nome
            </td>
            <td>
                @item.parametro.valor
            </td>
        </tr>
	    </tbody>
    }

    </table>
    
    
    @if (Model.Count > 0)
    {
        @Html.Partial("Paginacao", Model)
    }
</div>
}
    
    
