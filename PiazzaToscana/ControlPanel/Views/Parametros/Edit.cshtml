@model PinheiroSereni.Negocio.Repositories.ControlPanel.ParamRepository
@{
    ViewBag.Title = "Painel de Controle";
}

@using (Html.BeginForm("Edit", "Parametros", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div id="div-incluir">
        <div class="baseForm">
            <div style="font-family: Verdana; font-weight: bold; font-size: 14px; color: #808080; height: 25px">Edição de Parâmetros</div>
            <div style="height: 3px; width: auto; background-color: #f00">
                &nbsp;
            </div>
            <div style="margin-top: 20px">
                <div style="width: 700px; float: left">
                    @*----------------
                    Valor do Parâmetro
                    ---------------*@
                    <div style="margin-top: 10px; margin-left: 20px; height: 20px; font-weight: bold;">
                        @Model.parametro.nome
                        @Html.HiddenFor(m => m.parametro.nome)
                    </div>            
                    <div style="margin-left: 20px; height: 15px">
                        @Html.TextBoxFor(m => m.parametro.valor, new { @class = "text-box-300" })
                    </div>       
                    <div style="margin-left: 20px; height: 15px; padding-top: 8px">
                        @Html.ValidationMessageFor(m => m.parametro.valor, "", new { @class = "font-validation" })
                    </div>
                </div>
            </div>
            <div>
                <div style="width: 700px; float: left; height: 50px">
                    <div style="margin-top: 5px; margin-left: 20px; height: 20px; font-weight: bold">
                        <input type="submit" value="Alterar" class="button" />
                        <input type="button" value="Fechar" class="button" onclick="retorna();" />
                    </div>            
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("Mensagem", Model);
}

<script type="text/javascript">

    function retorna() {
        call('@Url.Content("~/Parametros/Browse")');
    }
</script>