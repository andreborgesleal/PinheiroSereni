@model System.Web.Mvc.PagedList<PinheiroSereni.Negocio.Repositories.ControlPanel.Report.Rpt03Repository>
@{
    ViewBag.Title = "Painel de Controle";
}
@{
    Layout= null;
}           

<div class="div-table-list" style="margin-top: 200px">
    <table  id="table-sort" class="tablesorter" style="width: 100%">
        <thead>
            <tr>
                <th style="width: 50px"></th>
                <th style="width: 90px; text-align: center">
                    OCORRÊNCIA
                </th>
                <th style="width: 200px; text-align: left">
                    NOME
                </th>
                <th style="width: 75px">
                    TELEFONE
                </th>
                <th style="width: 200px">
                    E-MAIL
                </th>
                <th style="width: 150px">
                    CORRETOR
                </th>
                <th style="width: 150px">
                    TIPO
                </th>
            </tr>
        </thead>
    @foreach (var item in Model)
    {
        <tbody>
        <tr id="linha" style="cursor: pointer;" onmouseover="javascript:TarjaIn(this);" onmouseout="javascript:TarjaOut(this);">
            <td>            
                <a href="#" class="link-detalhar" title="Detalhar" onclick="Detail('@item.id','@item.tipo');"></a>
            </td>            
            <td style="text-align: center">
                @item.dt_cadastro.ToString("dd/MM/yyyy HH:mm")
            </td>
            <td style="text-align: left">
                @item.nome
            </td>
            <td>
                @PinheiroSereni.Library.Funcoes.FormataTelefone(item.telefone)
            </td>
            <td>
                @item.email
            </td>
            <td>
                @item.nome_corretor
            </td>
            <td>
                @item.tipo
            </td>
        </tr>
	    </tbody>
    }

    </table>
    
    
    @if (Model.Count > 0)
    {
        @Html.Partial("Paginacao", Model)
    }
</div>
    
    
