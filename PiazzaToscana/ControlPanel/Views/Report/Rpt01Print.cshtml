@model IList<PinheiroSereni.Negocio.Repositories.ControlPanel.Report.Rpt01Repository>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Listagem de clientes</title>
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/funcoes.js")"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>     
    <script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcValidation.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput-1.2.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
</head>
<body>
    <div id="imprimir">
        <table style="width: 100%; border: 1px; font-family: tahoma; font-size: 9px; margin: 0px 0px 0px 0px" cellspacing="0">
            <tr>
                <td style="font-size: 10px; font-weight: bold; border-color: White; margin: 0px 0px 0px 0px; width: 100%; text-align: center; vertical-align: middle; border-bottom: 1px solid #808080; padding: 0px !important" colspan="8">
                    @if (Model.Count() > 0)
                    {
                        if (Model.First().empreendimentoId == 1)
                        {
                            <img src="../Content/themes/base/images/painel/PizzaToscanaPequeno.png" alt="" /><br /> <br /> 
                        }
                        else
                        {
                            <img src="../Content/themes/base/images/painel/SanGenaroPequeno.png" alt="" /><br /> <br /> 
                        }
                    }                    
                    LISTAGEM DE CLIENTES <br />
                    PERÍODO: @ViewBag.dt_inicio à @ViewBag.dt_fim
                </td>
            </tr>
            <tr style="font-weight: bold">
                <td style="width: 200px; text-align: left; border-bottom: 1px solid #808080">
                    NOME
                </td>
                <td style="width: 85px; text-align: left; border-bottom: 1px solid #808080">
                    TELEFONE
                </td>
                <td style="width: 200px; text-align: left; border-bottom: 1px solid #808080">
                    E-MAIL
                </td>
                <td style="width: 90px; text-align: center; border-bottom: 1px solid #808080">
                    DT.CADASTRO
                </td>
                <td style="width: 80px; text-align: center; border-bottom: 1px solid #808080">
                    FOLDER <br />DIGITAL
                </td>
                <td style="width: 80px; text-align: center; border-bottom: 1px solid #808080">
                    ATEND. <br />EMAIL
                </td>
                <td style="width: 80px; text-align: center; border-bottom: 1px solid #808080">
                    CHAT
                </td>
                <td style="width: 80px; text-align: center; border-bottom: 1px solid #808080">
                    SMS
                </td>
            </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align: left;">
                    @item.nome
                </td>
                <td style="text-align: left;">
                    @PinheiroSereni.Library.Funcoes.FormataTelefone(item.telefone)
                </td>
                <td style="text-align: left;">
                    @item.email
                </td>
                <td style="text-align: center;">
                    @item.dt_cadastro.ToString("dd/MM/yyyy HH:mm")
                </td>
                <td style="text-align: center;">
                    @item.isFolderDigital
                </td>
                <td style="text-align: center;">
                    @item.isAtendimentoEmail
                </td>
                <td style="text-align: center;">
                    @item.isChat
                </td>
                <td style="text-align: center;">
                    @item.isSms
                </td>
            </tr>
        }
        </table>
        <div style="border-bottom: 1px solid #808080"></div>
    </div>
    <br />
    <div style="width: 100%; text-align: left">
    <input type="button" value="Imprimir" class="button" onclick="printDiv();" />  
    <input type="button" value="Fechar" class="button" onclick="closeDetail(this)" />  
    </div>

<script type="text/javascript">

    function imp(obj) {


    }

    function closeDetail() {
        window.close();
    }

    function printDiv() {
        var cabec = "<head><meta content=\"text/html; charset=utf-8\" http-equiv=\"Content-Type\" >" +
                      "<meta http-equiv=\"X-UA-Compatible\" content=\"IE=8\" >" +
                      "<title></title>" +
                      "<style type=\"text/css\" media=\"print\">  " +
                      "</style>" +
                      "<div>";


        var texto = cabec + $('#imprimir').html() + "</div>";
        var w = window.open('');
        w.document.write(texto);
        w.document.close();
        w.focus();
        w.print();
        w.close();
    }

</script>

</body>

</html>
