<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Crud.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/listagem.css")" rel="stylesheet" type="text/css" />
    
    <link href="@Url.Content("~/Content/css/PepperGrinder/jquery-ui-1.8.2.custom.css")" rel="stylesheet" type="text/css"  />

    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/funcoes.js")"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>     
    <script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcValidation.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput-1.2.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
</head>
<body style="background-color: #fff">
    <div class="page">
        <div class="win8-tools">
            <div style="float: left; margin-left: 50px; padding-top: 3px">Painel de Controle</div>
            <div id="divCad" class="menu-cadastro" style="float: left; font-size: 14px; padding-left: 34px; padding-top: 14px; width: 146px; height: 32px; margin-left: 231px; margin-top: -8px; cursor: pointer" onmouseover="Display('menu1')" onmouseout="Esconde('menu1')" >
                Cadastros
            </div>
            <div id="divRep" class="menu-relatorio" style="float: left; font-size: 14px; padding-left: 34px;  padding-top: 14px; width: 146px; height: 32px; margin-left: 0px; margin-top: -8px; cursor: pointer" onmouseover="Display('menu2')" onmouseout="Esconde('menu2')" >
                Relatórios
            </div>
            <div style="float: right; height: 30px; margin-left: 100px; font-size: 11px; margin-top: -6px; padding-top: 0px; padding-right: 7px" >
                <div class="button-sair" onclick="window.location='@Url.Action("Encerrar", "Home")'">
                    @Html.ActionLink("Sair", "Encerrar", "Home", "", new { @style = "color: #fff; text-decoration: none; padding-top: 15px" }) 
                </div>
            </div>
        </div>
    </div>
    <div style="width: 100%; height: 2px;">
        <div style="float: left; width: 175px; margin-top: 0px; margin-left: 450px; height: 2px; " onmouseover="Display('menu1')" ></div>
        <div style="float: left; width: 160px; margin-top: 0px; margin-left: 5px; height: 2px" onmouseover="Display('menu2')" ></div>
    </div>
    <div id="menu1" style="visibility: hidden; z-index: 1; position: absolute; background-color: #fff; width: 350px; margin-top: 0px; margin-left: 450px; border: 1px solid #808080; cursor: pointer; float: left" onmouseover="Display('menu1')" onmouseout="Esconde('menu1')">
        <div id="opcao11" style="padding: 6px; height: 38px; border-bottom: 1px solid #cecece" onmouseover="SombraIn(this)" onmouseout="SombraOut(this)" onclick="call('@Url.Content("~/Corretoras/Browse")')">
            <div style="float: left; color: #000; font-weight: bold; font-size: 13px">Cadastro de Corretoras</div>
            <div style="float: left; color: #808080; font-size: 11px">Inclusão, alteração, exclusão e consulta de corretoras</div>
            <div style="float: right; padding-right: 4px" class="menu-casa">&nbsp;</div>
        </div>
        <div id="opcao12" style="padding: 6px; height: 38px; border-bottom: 1px solid #cecece" onmouseover="SombraIn(this)" onmouseout="SombraOut(this)" onclick="call('@Url.Content("~/Corretores/Browse")')">
            <div style="float: left; color: #000; font-weight: bold; font-size: 13px">Cadastro de Corretores</div>
            <div style="float: left; color: #808080; font-size: 11px">Inclusão, alteração, exclusão e consulta de corretores</div>
            <div style="float: right; padding-right: 10px" class="menu-corretor"></div>
        </div>
        <div id="opcao13" style="padding: 6px; height: 38px" onmouseover="SombraIn(this)" onmouseout="SombraOut(this)" onclick="call('@Url.Content("~/Parametros/Browse")')">
            <div style="color: #000; font-weight: bold; font-size: 13px">Parâmetros</div>
            <div style="float: left; color: #808080; font-size: 11px">Atualiza os parâmetros do hotsite</div>
            <div style="float: right; padding-right: 4px" class="menu-parametro"></div>
        </div>
    </div>
    <div id="menu2" style="visibility: hidden; z-index: 1; background-color: #fff; width: 300px; margin-top: 0px; margin-left: 630px; position: absolute; height: 0px; border: 1px solid #808080; cursor: pointer; float: left" onmouseover="Display('menu2')" onmouseout="Esconde('menu2')">
        <div style="padding: 5px; height: 18px; background-color: #808080; color: #fff; font-weight: bold; font-size: 13px">Relatórios Estatisticos</div>
        <div id="li4" style="margin-top: 15px; padding-left: 6px"><li>@Html.ActionLink("Listagem de clientes", "Rpt01", "Report", "", new { @style = "color: #000; cursor: pointer; padding: 5px;" })</li></div>
        <div id="li5" style="margin-top: 5px; padding-left: 6px"><li>@Html.ActionLink("Estatística de atendimentos", "Rpt02", "Report", "", new { @style = "color: #000; cursor: pointer; padding: 5px;" })</li></div>
        <div id="li6" style="margin-top: 5px; padding-left: 6px"> <li>@Html.ActionLink("Desempenho Hot Site", "Rpt03", "Report", "", new { @style = "color: #000; cursor: pointer; padding: 5px; normal" })</li></div>
@*        <div id="li7" style="margin-top: 5px; padding-left: 6px"><li>@Html.ActionLink("Estatística de Chats", "Rpt04", "Report", "", new { @style = "color: #000; cursor: pointer; padding: 5px; " })</li></div>
        <div id="li8" style="margin-top: 5px; padding-left: 6px"><li>@Html.ActionLink("Estatística de Inscrições", "Rpt05", "Report", "", new { @style = "color: #000; cursor: pointer; padding: 5px; " })</li></div>*@
    </div>
    <div class="wall-paper" style="border: 1px solid #fff">
        @RenderBody()
        <div id="carregando" style="visibility: hidden; width: 1024px; margin-left: auto; margin-right: auto; position: relative">
            Carregando...
            <img alt="Carregando" style="margin-top:-40px" src="@Url.Content("~/Content/themes/base/images/painel/ajax-loader.gif")" /><br />
        </div>
    </div>
</body>
</html>

<script type="text/javascript">

    if (document.all) // Internet Explorer  
    {
        document.getElementById("li4").style["padding-left"] = "20px";
        document.getElementById("li5").style["padding-left"] = "20px";
        document.getElementById("li6").style["padding-left"] = "20px";
        //document.getElementById("li7").style["padding-left"] = "20px";
        //document.getElementById("li8").style["padding-left"] = "20px";
    }
    //else if (document.layers) // Nestcape  
    //    var tecla = e.which;
    //else if (document.getElementsByTagName("*"))
    //    var tecla = event.keyCode;

    function call(method) {
        window.location =  method;
    }

    function SombraIn(obj) {
        obj.style["background-color"] = "#f2ebeb";
    }

    function SombraOut(obj) {
        obj.style["background-color"] = "#fff";
    }

    function Display(obj) {
        document.getElementById(obj).style["visibility"] = "visible";
        
        if (obj == 'menu1') {
            document.getElementById('divCad').style["background-color"] = "#d02929";
            document.getElementById(obj).style["height"] = "153px";
            Esconde('menu2');
        }
        else {
            document.getElementById('divRep').style["background-color"] = "#d02929";
            document.getElementById(obj).style["height"] = "120px";
            Esconde('menu1');
        }
    }
    function Esconde(obj) {
        document.getElementById(obj).style["visibility"] = "hidden";
        document.getElementById(obj).style["height"] = "0px";
        if (obj == 'menu1')
            document.getElementById('divCad').style["background-color"] = "#ff0000";
        else
            document.getElementById('divRep').style["background-color"] = "#ff0000";
    }
</script>
